---
const { texto } = Astro.props;
const { titulo } = Astro.props;
const { imagen_desktop } = Astro.props;
const { imagen_mobile } = Astro.props;
---

<tr class="content-row" style="width: 100%; display: table !important;">
  <td
    align="center"
    style="line-height: 0px; mso-line-height-rule: exactly;-ms-text-size-adjust: 100%;-webkit-text-size-adjust: 100%;" class="ic-padding-fix"
  >
    <table
      class="container"
      style="width:100%;"
      cellspacing="0"
      cellpadding="0"
      border="0"
    >
      <tbody
        class="content-body"
        style="width: 100%; display: table !important"
      >
        <tr
          class="content-row "
          style=" width: 100%; display: table !important; "
        >
          <td
            valign="middle"
            align="center"
            style="mso-line-height-rule: exactly;-ms-text-size-adjust: 100%;-webkit-text-size-adjust: 100%; width:150px; max-width:100%;"
            class=""
          >
            <p style="text-decoration:none;display:inline-block; margin-top: 0px;line-height: 0px;"
            >
              <img  height="216"
              style="vertical-align: baseline; max-width: 100%; display: block; border-radius: 12px;"
              src={imagen_mobile}
              alt="Hero banner"
              class="img-responsive img-1 img-mobile">

              <img  height="216"
              style="vertical-align: baseline; max-width: 100%; display: block; border-radius: 12px;"
              src={imagen_desktop}
              alt="Hero Banner"
              class="img-responsive img-1 img-desktop">      
          </p>
            <h2
              class="dhx-p-smaller"
              style="line-height: 20px; text-align: left; color: #273480; margin: 20px 0px 4px 0px"
            >
              <Fragment set:html={titulo} />
            </h2>
            <p class="dhx-p-smaller" style="line-height: 20px; text-align: left; color: #353535; ">
              <Fragment set:html={texto} />
            </p>
          </td>
        </tr>
      </tbody>
    </table>
  </td>
</tr>

