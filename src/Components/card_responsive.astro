---
 const  { texto } = Astro.props;
 const  { imagen_mobile } = Astro.props;
 const  { imagen_desktop } = Astro.props;
 const  { clases } = Astro.props;
---


<tr class="content-row"
style="width: 100%; display: table !important;">
<td align="center" style="line-height: 0px; mso-line-height-rule: exactly;-ms-text-size-adjust: 100%;-webkit-text-size-adjust: 100%;" class="ic-padding-fix">

    <table class="container"
        style="width:100%;"
        cellspacing="0" cellpadding="0" border="0">
        <tbody class="content-body"
            style="width: 100%; display: table !important">
            <tr class="content-row ic-card-lab"
                style=" width: 100%; display: table !important; border: 1px solid #D3DDFF; border-radius: 12px;">
                <td valign="middle" align="center"
                    style="line-height:0px; mso-line-height-rule: exactly;-ms-text-size-adjust: 100%;-webkit-text-size-adjust: 100%; width:150px; max-width:100%;"
                    class="td-responsive" >
                    <p style="text-decoration:none;display:inline-block; margin-top: 0px;line-height: 0px;">
                        <img 
                            style="vertical-align: baseline; max-width: 100%; width: 150px; border-radius: 12px; "
                            src={ imagen_mobile }
                            alt="inConcert"
                            class="img-responsive img-1 img-mobile ">
                        <img 
                            style="vertical-align: baseline; max-width: 100%; width: 150px; border-radius: 12px;"
                            src={ imagen_desktop }
                            alt="inConcert"
                            class="img-responsive img-1 img-desktop ">
                </p>
                </td>
                <td valign="middle" class="padding-mobile td-responsive"
                    style="mso-line-height-rule: exactly;-ms-text-size-adjust: 100%;-webkit-text-size-adjust: 100%; text-align: left !important; font-family: Helvetica, sans-serif; padding: 0px 23px 0px 23px;">
                    <p class= {clases} 
                        style="line-height: 20px; text-align: left; color: #353535; margin-bottom: 0px;">
                        <Fragment set:html={texto} />
                    </p>
                </td>
            </tr>
        </tbody>
    </table>
</td>
</tr>
